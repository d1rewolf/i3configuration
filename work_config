#exec xrdb -merge $HOME/.Xresources

bindsym $mod+Ctrl+l exec $HOME/.config/i3/utils/lock.sh
exec --no-startup-id xautolock -time 5 -locker $HOME/.config/i3/utils/lock.sh &

# reference
bindsym $mod+Ctrl+Shift+i exec eog $HOME/.config/i3/utils/i3reference.jpg

exec_always xrandr --output HDMI-1-2 --off \
	   --output HDMI-1-1 --off \
       --output DP-2-1 --mode 1920x1080 --pos 3840x0 --rotate normal \
	   --output eDP-1-1 --off \
	   --output DP-1-3 --off \
	   --output DP-1-2 --mode 1920x1080 --pos 0x0 --rotate normal \
	   --output DP-1-1 --off \
	   --output DP-2-2 --primary --mode 1920x1080 --pos 1920x0 --rotate normal \
	   --output DP-2-3 --off 
